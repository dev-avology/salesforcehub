      "inversedBy": "comments"
    },
    "reactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reaction.reaction",
      "mappedBy": "comment"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "comments"
    },
    "replies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reply.reply",
      "mappedBy": "commentID"
    },
    "CommentImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
